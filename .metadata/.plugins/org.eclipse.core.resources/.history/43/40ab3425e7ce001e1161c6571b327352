package test;
import java.util.*;
public class Main
{
    public static void main(String args[])
    {
    	Scanner sc=new Scanner(System.in);
        int num;
        num=sc.nextInt();
        if(num%2==0 && (num/2)%2==0)
        {
            System.out.println("YES");
        }
        else
        {
            System.out.println("NO");
        }
    }
}