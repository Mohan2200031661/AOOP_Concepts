package test;
import java.util.*;
public class Main
{
    public static void main(String args[])
    {
    	Scanner sc=new Scanner(System.in);
        int num;
        num=sc.nextInt();
        //sc.next();
        int count=0;
        while(num-- >0);
        {
        	String s=sc.next();
        	if(s.equals("++X") || s.equals("X++"))
        	{
        		count++;
        	}
        	else
        	{
        		count--;
        	}
        }
        System.out.println(count);
        
    }
}